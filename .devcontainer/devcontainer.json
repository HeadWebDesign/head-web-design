{
  "name": "Local Dev Environment",

  "build": {
    "dockerfile": "Dockerfile"
  },

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "forwardPorts": [3000],

  "postCreateCommand": "bash -c \"git config --global user.name 'Head Web Design' && git config --global user.email 'info@headwebdesign.ie'\"",

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}